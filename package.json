{
  "name": "turotopost",
  "version": "4.2.0",
  "description": "نظام النشر التلقائي على فيسبوك باستخدام Zapier و Firebase - محسن ومحدث",
  "main": "src/auto_poster.js",
  "scripts": {
    "start": "node src/auto_poster.js",
    "rotation": "node src/rotation_system.js",
    "test-connection": "node src/test_connection.js",
    "check-env": "node -e \"console.log('Environment check:', Object.keys(process.env).filter(k => k.includes('FIREBASE') || k.includes('ZAPIER') || k.includes('TELEGRAM')))\"",
    "validate": "npm run check-env && node -c src/auto_poster.js",
    "dev": "node --inspect src/auto_poster.js"
  },
  "dependencies": {
    "axios": "^1.7.7",
    "date-fns": "^3.6.0",
    "firebase-admin": "^12.5.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.0"
  },
  "keywords": [
    "facebook",
    "automation",
    "zapier",
    "firebase",
    "social-media",
    "auto-posting",
    "premium"
  ],
  "author": "Turki",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "github.com/turkifyy/turotopost"
  }
}
