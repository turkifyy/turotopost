{
  "name": "turotopost",
  "version": "4.2.1",
  "description": "نظام النشر التلقائي على فيسبوك باستخدام Zapier و Firebase - محسن ومحدث مع دعم الاستيراد الجماعي",
  "main": "src/auto_poster.js",
  "scripts": {
    "start": "node src/auto_poster.js",
    "rotation": "node src/rotation_system.js",
    "test-connection": "node src/test_connection.js",
    "check-env": "node -e \"console.log('Environment check:', Object.keys(process.env).filter(k => k.includes('FIREBASE') || k.includes('ZAPIER') || k.includes('TELEGRAM')))\"",
    "validate": "npm run check-env && node -c src/auto_poster.js",
    "dev": "node --inspect src/auto_poster.js",
    "import-stats": "node -e \"require('./src/auto_poster.js').checkImportStats()\"",
    "bulk-monitor": "node src/bulk_monitor.js"
  },
  "dependencies": {
    "axios": "^1.7.7",
    "date-fns": "^3.6.0",
    "firebase-admin": "^12.6.0",
    "node-cron": "^3.0.3",
    "chalk": "^4.1.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.0",
    "eslint": "^8.57.0"
  },
  "keywords": [
    "facebook",
    "automation",
    "zapier",
    "firebase",
    "social-media",
    "auto-posting",
    "premium",
    "bulk-import",
    "استيراد-جماعي"
  ],
  "author": "Turki",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/turkifyy/turotopost.git"
  },
  "bugs": {
    "url": "https://github.com/turkifyy/turotopost/issues"
  },
  "homepage": "https://github.com/turkifyy/turotopost#readme",
  "funding": {
    "type": "patreon",
    "url": "https://patreon.com/turkify"
  }
}
